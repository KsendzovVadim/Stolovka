<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
"-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url"> jdbc:h2:tcp://localhost/~/test</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.show_sql">true</property>
		<!-- <property name="hibernate.default_schema"></property> -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<mapping class="entity.EntityChatAdminOficiant" />
		<mapping class="entity.EntityChatAdminPovar" />
		<mapping class="entity.EntityChatOficiantPovar" />
		<mapping class="entity.EntityPolnoeMenu" />
		<mapping class="entity.EntityOperOficiantPovar" />
		<mapping class="entity.EntityOperPovarOficiant" />
		<mapping class="entity.EntitySkvoznayaStata" />
		<mapping class="entity.EntityStatOficiantPovar" />
		<mapping class="entity.EntityStatOficiantVidacha" />
		<mapping class="entity.EntityStatPovarOficiant" />
		<mapping class="entity.EntityUsers" />
	</session-factory>
</hibernate-configuration>
